{
  "name": "atl5d",
  "description": "Host your own link in bio page, featuring a contact form and simple blog",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",

  "engines": {
    "node": ">=18.17.0"
  },

  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:test": "cross-env PUBLIC_USE_TEST_SITE_CONFIG=true PUBLIC_USE_TEST_BLOG=true astro build",
    "preview": "astro preview",
    "astro": "astro",

    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",

    "deploy": "./scripts/deploy.sh",
    "deploy:win": "wsl \"./scripts/deploy.sh\"",
    "go-live": "pnpm install && pnpm build && pnpm deploy:win"
  },

  "dependencies": {
    "astro": "^5.16.6",
    "@astrojs/check": "^0.9.6",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "astro-icon": "^1.1.1",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },

  "devDependencies": {
    "@iconify-json/fluent-emoji-flat": "^1.2.3",
    "@iconify-json/fluent-emoji-high-contrast": "^1.2.3",
    "@iconify-json/logos": "^1.2.4",
    "@iconify-json/lucide": "^1.2.39",
    "@iconify-json/material-symbols": "^1.2.20",
    "@iconify-json/material-symbols-light": "^1.2.20",

    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.15",
    "@vitest/ui": "^4.0.10",

    "cross-env": "^7.0.3",
    "daisyui": "^4.12.14",

    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",

    "playwright": "^1.56.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.8",

    "vitest": "^4.0.10"
  }
}